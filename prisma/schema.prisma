generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Esporte {
  id          String       @id @default(uuid())
  nome        String       @unique
  descricao   String
  Equipe      Equipe[]
  Campeonatos Campeonato[]

  @@map("esportes")
}

model Equipe {
  id         String  @id @default(uuid())
  nome       String
  descricao  String
  id_esporte String
  esporte    Esporte @relation(fields: [id_esporte], references: [id])

  @@map("equipes")
}

//Faltou adicionar usuario
model Campeonato {
  id                    String   @id @default(uuid())
  nome                  String
  descricao             String
  legenda               String
  id_esporte            String
  total_atletas_equipes Int
  total_equipes         Int
  data_inicio_inscricao DateTime
  data_final_inscricao  DateTime
  horario               String
  endereco              String
  bairro                String
  cidade                String
  esporte               Esporte  @relation(fields: [id_esporte], references: [id])

  @@map("campeonatos")
}
