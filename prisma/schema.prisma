generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Esporte {
  id        String   @id @default(uuid())
  nome      String   @unique
  descricao String
  Equipe    Equipe[]

  @@map("esportes")
}

model Equipe {
  id         String  @id @default(uuid())
  nome       String
  descricao  String
  id_esporte String
  esporte    Esporte @relation(fields: [id_esporte], references: [id])

  @@map("equipes")
}
